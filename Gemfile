gem 'sassc-rails', '~> 2.1.0'
# gem 'font-awesome-sass', '~> 4.2.0'
gem 'font-awesome-rails', '~> 4.5.0.0'

group :development, :test do
  gem 'rspec-rails', '~> 3.0'
end

group :test do
  gem 'capybara'
end

group :development do
  gem 'sqlite3'
end

group :production do
  gem 'pg', '~> 0.21'
