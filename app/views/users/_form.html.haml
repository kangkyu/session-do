.row
  .col-md-6.offset-md-3.col-sm-8.offset-sm-2.col-12
    = form_for @user, class: 'form-group' do |f|
      = f.text_field :username, placeholder: "username", class: 'form-control mb-4'
      = f.email_field :email, placeholder: "email", class: 'form-control mb-4'
      = f.password_field :password, placeholder: "password", class: 'form-control mb-4'
      .text-right
        - if @user.new_record?
          = f.submit 'Sign Up', class: 'btn btn-success'
        - else
          = f.submit 'Update', class: 'btn btn-default'
