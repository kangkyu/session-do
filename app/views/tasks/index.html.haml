- content_for(:title, 'Non-Dailies')

- content_for(:discard_dailies, false)
- content_for(:discard_link_middle, false)
- content_for(:discard_non_dailies, true)

- if @tasks.empty?
  .row
    .col-md-4.col-sm-3.col-xs-2
    .col-md-4.col-sm-6.col-xs-8
      %p.text-center
        = link_to "Add one!", new_task_path, class: 'btn btn-link'
    .col-md-4.col-sm-3.col-xs-3
  .row
    .col-md-4.col-sm-3.col-xs-1
    .col-md-4.col-sm-6.col-xs-10
      %p.text-center
        You don't have any tasks.
    .col-md-4.col-sm-3.col-xs-1
- else
  = render 'layouts/tab_bar', discard_dailies: content_for(:discard_dailies), discard_link_middle: content_for(:discard_link_middle), discard_non_dailies: content_for(:discard_non_dailies)

  = render @tasks

