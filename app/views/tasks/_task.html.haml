%div
  .row
    .col-md-7.col-sm-8.col-xs-7
      %p.text-left
        = link_to task_name(task), edit_task_path(task)
        %small
          %code on #{(task.done_at).strftime("%b %d")}
        %span{style:"margin-left: 2px;"}= task.comment
    .col-md-5.col-sm-4.col-xs-5
      %p.text-right
        = link_to fa_icon_with_removed_text('check', text: 'Clear'), clear_task_path(task), class: 'btn btn-default'
        \ #{link_to fa_icon_with_removed_text('times', text: 'Delete'), task, method: :delete, class: 'btn btn-danger'}
  .progress
    = progress_bar_tag(task)
    .text-center
      = progress_bar_text(task)
